{
  "$schema": "https://json.schemastore.org/package",
  "name": "@fisch0920/config",
  "version": "1.3.6",
  "description": "Shared TypeScript, ESLint, and Prettier configs for my TS projects.",
  "repository": "transitive-bullshit/config",
  "author": "Travis Fischer <travis@transitivebullsh.it>",
  "license": "MIT",
  "packageManager": "pnpm@10.28.2",
  "engines": {
    "node": ">=18"
  },
  "files": [
    "config"
  ],
  "type": "module",
  "exports": {
    "./eslint": "./config/eslint.js",
    "./package.json": "./package.json",
    "./prettier": "./config/prettier.js",
    "./ts-reset": "./config/ts-reset.d.ts",
    "./tsconfig-node": "./config/tsconfig-node.json",
    "./tsconfig-react": "./config/tsconfig-react.json"
  },
  "scripts": {
    "test": "run-p test:*",
    "test:format": "prettier --check \"**/*.{js,ts,tsx}\"",
    "test:lint": "eslint .",
    "test:typecheck": "tsc",
    "prerelease": "run-s test",
    "release": "np --yolo"
  },
  "dependencies": {
    "@eslint/js": "^9.39.2",
    "@total-typescript/ts-reset": "^0.6.1",
    "@vitest/eslint-plugin": "^1.6.6",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jest-dom": "^5.5.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-testing-library": "^7.15.4",
    "eslint-plugin-unicorn": "^62.0.0",
    "eslint-plugin-zod": "^3.0.2",
    "globals": "^17.3.0",
    "typescript-eslint": "^8.54.0"
  },
  "devDependencies": {
    "@types/react": "^19.2.13",
    "eslint": "^9.39.2",
    "np": "^11.0.2",
    "npm-run-all2": "^8.0.4",
    "prettier": "^3.8.1",
    "react": "^19.2.4",
    "typescript": "^5.9.3",
    "zod": "^4.3.6"
  },
  "peerDependencies": {
    "eslint": ">= 9",
    "prettier": ">= 3",
    "typescript": ">= 5"
  },
  "publishConfig": {
    "access": "public"
  },
  "prettier": "./config/prettier.js"
}
